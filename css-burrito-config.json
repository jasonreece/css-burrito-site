      "sassImportFile": "application.scss"
    },
    "modules": {
      "modulesDirectory": "modules",
      "modulesImportFile": "_modules.scss",
      "moduleFiles": [
        "_btns.scss",
        "_forms.scss",
        "_logo.scss"
      ]
    }
  },
  "template": {
    "directories": [
      "global",
      "libs"
